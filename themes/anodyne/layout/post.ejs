<!-- Banner -->
<%- partial('_partial/banner.ejs', {
    mainText: page.title || theme.default_post_title || __('default_post_title'),
    secondaryText: page.date ? page.date.format(config.date_format) : '',
    faIconCss: page.icon || theme.default_post_ico || '',
    imageUrl: page.image || '',
}) %>

<!-- Content -->
<div class="w-100 ph2 ph4-m ph5-l mv5 mv6-l">
    <div class="content">
        <div class="mw8 center">
            <div class="cf">
                <div class="fl w-100 w-70-l mw7 left fw3 lh-copy pr4-ns pr0-m post-content">
                    <!-- Tags Vertical -->
                    <% if (page.tags && page.tags.length) {
                        var tags = [];
                        page.tags.forEach(function(tag) {
                            tags.push('<a class="fw3 ph1 dib" href="' +  config.root + tag.path + '">#' + tag.name + '</a>');
                        });
                    %>
                        <div class="tags-container-vertical">
                            <div class="tags-sub-container">
                                <%- tags.join(' ') %>
                            </div>
                        </div>
                    <% } %>

                    <!-- Main Post Content -->
                    <%- page.content %>

                    <div class="social-sharing pv3">
                      <h5 class="mv1">Did you like this article? Please share!</h5>
                      <div class="flex items-center">
                        <a class="twitter-share-button" 
                           href="https://twitter.com/intent/tweet?text=<%- page.title %> by @miloszpp"
                           data-size="large">
                          Tweet
                        </a>
                        <div class="fb-share-button mh1" 
                             data-href="<%- page.url %>" 
                             data-layout="button_count"
                             data-size="large">
                        </div>
                      </div>
                    </div>
                    
                    <!-- Tags Bottom -->
                    <% if (page.tags && page.tags.length) { %>
                        <div class="tags-container-bottom">
                            <i class="fa fa-tag pr3 text-main-color"></i><%- tags.join(' ') %>
                        </div>
                    <% } %>

                    <!-- Comments -->
                    <%- partial('_partial/comments.ejs') %>

                </div>
                <div class="fl w-100 w-30-l center fw3 lh-copy pl4-ns tl black-50">
                <%- partial('_partial/sidebar') %>
                </div>
            </div>
        </div>
    </div>
</div>
